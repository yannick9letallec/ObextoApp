<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mobapp" version="0.0.10" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MobApp</name>
    <description>
        Obexto OnTheFly : Suite d'outils dédiés aux professionnels en mobilité.
    </description>
    <author email="yannick9letallec@gmail.com" href="http://touch-pico.fr">
        Obexto Team 
    </author>
    <content src="index.html" />
    <access origin="http://developpement.obexto.fr/" subdomains="true" />
    <!-- specify platform -->
    <gap:platform name="android" />

    <!-- specify preferences -->
<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="splash.png" density="land-hdpi"/>
    <splash src="splash.png" density="land-ldpi"/>
    <splash src="splash.png" density="land-mdpi"/>
    <splash src="splash.png" density="land-xhdpi"/>

    <splash src="splash.png" density="port-hdpi"/>
    <splash src="rsplash.png" density="port-ldpi"/>
    <splash src="splash.png" density="port-mdpi"/>
    <splash src="splash.png" density="port-xhdpi"/>
</platform>

    <!-- SPLASH SCREEN -->
    <gap:splash src="splash.png"  />

    <!-- PLUGINS -->
     <preference name="SplashScreen" value="splash.png" />
     <preference name="SplashScreenDelay" value="10000" />
    
<!--
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="splash-screen-duration" value="5000" />
-->

</widget>
