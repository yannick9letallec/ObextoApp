<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mobapp" version="0.0.10" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MobApp</name>
    <description>
        Obexto OnTheFly : Suite d'outils dédiés aux professionnels en mobilité.
    </description>
    <author email="yannick9letallec@gmail.com" href="http://touch-pico.fr">
        Obexto Team 
    </author>
    <content src="index.html" />
    <access origin="http://developpement.obexto.fr/" subdomains="true" />
    <!-- specify platform -->
    <gap:platform name="android" />

    <!-- specify preferences -->
    <feature name="SplashScreen">
	<param name="android-package" value="org.apache.cordova.SplashScreen" />
    </feature> 
    <feature name="SplashScreen">
	<param name="ios-package" value="CDVSplashScreen" />
    </feature>

    <!-- SPLASH SCREEN -->
    <gap:splash src="splash.png"  />

    <!-- PLUGINS -->
     <preference name="SplashScreen" value="screen" />
     <preference name="SplashScreenDelay" value="10000" />
    
<!--
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="splash-screen-duration" value="5000" />
-->

</widget>
