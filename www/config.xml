<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mobapp" version="0.0.10" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MobApp</name>
    <description>
        Obexto OnTheFly : Suite d'outils dédiés aux professionnels en mobilité.
    </description>
    <author email="yannick9letallec@gmail.com" href="http://touch-pico.fr">
        Obexto Team 
    </author>
    <content src="index.html" />
    <access origin="*" />
    <!-- specify platform -->
    <gap:platform name="android" />

    <!-- specify preferences -->
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="splash-screen-duration" value="5000" />

    <!-- SPLASH SCREEN -->
    <gap:splash src="splash.png"  />

    <!-- FEATURES -->
    <feature name="http://api.phonegap.com/1.0/camera" />
    <feature name="http://api.phonegap.com/1.0/contacts" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/media" />
    <feature name="http://api.phonegap.com/1.0/notification" />

    <!-- PLUGINS -->
    <gap:plugin name="org.apache.cordova.dialogs" version="1.0.4" />
    <gap:plugin name="org.apache.cordova.vibration" version="1.0.4" />

</widget>
